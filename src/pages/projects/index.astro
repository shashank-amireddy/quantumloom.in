---
import { Image } from 'astro:assets'

import { Button, Collapse } from 'astro-pure/user'
import PageLayout from '@/layouts/CommonPage.astro'
import ProjectSection from '@/components/projects/ProjectSection.astro'
import KeyIcon from '@/assets/icons/key.svg'
import config from '@/site-config'

const headings = [
  { depth: 2, slug: 'web3', text: 'Decentralized' },
  { depth: 2, slug: 'crypto', text: 'Cryptography' },
  { depth: 2, slug: 'extensions', text: 'Extensions' },
  { depth: 2, slug: 'learnings', text: 'Learnings' },
  { depth: 2, slug: 'writeups', text: 'Writeups' },
  { depth: 2, slug: 'others', text: 'Others' },
  { depth: 2, slug: 'gpg-signature', text: 'GPG Signature' },
]
---

<PageLayout title='Projects' {headings} info={{ slug: '/projects', hideComment: true }}>
  <p>Github Activities:</p>
  <p>
    <Image
      src='https://ghchart.rshah.org/78DC78/shashank-amireddy'
      alt='github activities'
      inferSize
      loading='lazy'
    />
  </p>
  <p>
    If you're interested in collaborating on a project, feel free to reach out to discuss further.
  </p>



  <h2 id='web3'>Decentralized Builds</h2>
  <ProjectSection
    project={[
      {
        name: 'Blockchain Crowdfunding',
        description: 'A crowdfunding platform built on Ethereum, allowing users to create and fund projects using smart contracts.',
        links: [
          { type: 'github', href: 'https://github.com/shashank-amireddy/crowdfunding' },
          // { type: 'site', href: 'https://t.me/PtiIopsis_bot' },
          
        ]
      }
    ]}
  />

  <h2 id='crypto'>Cryptography</h2>
  <ProjectSection
    class='my-2'
    project={[
      {
        name: 'Audio Encryption Standard',
        description: 'Audio-Encryption-using-AES-and-Cellular-Automaton',
        links: [
          { type: 'github', href: 'https://github.com/shashank-amireddy/Audio-Encryption-using-AES-and-Cellular-Automaton' },
