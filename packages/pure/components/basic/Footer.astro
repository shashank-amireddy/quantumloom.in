---
import config from 'virtual:config'

import { Icon } from '../user'
import diceIcon from '@/assets/icons/dice.svg?raw'
import arrowLeftIcon from '@/assets/icons/arrow-left.svg?raw'
import arrowRightIcon from '@/assets/icons/arrow-right.svg?raw'

const year = new Date().getFullYear()
const footerConf = config.footer
let social = footerConf.social || {}

social.rss = {
  label: 'RSS',
  url: '/rss.xml'
}
---

<footer class='mx-auto mb-5 mt-16'>
  <div class='border-t border-border pt-5'>
    <div class='flex items-center gap-y-3 max-sm:flex-col sm:justify-between sm:gap-y-0'>
      {/* Left side: Copyright and Webring main link */}
      <div
        class='flex flex-col gap-y-2 text-muted-foreground [&_a:hover]:text-primary [&_a]:text-foreground'
      >
        <a href='https://amrita.town'>amrita.town</a>
        <span>
          Â© {year}
          {config.author} &
          <a href='/terms/list'>Site policy</a>
        </span>
      </div>

      {/* Right side: Webring navigation and Social Brands */}
      <div class='flex flex-col items-end gap-y-2 max-sm:items-center'>
        <div class='flex items-center gap-x-3 text-muted-foreground [&_a:hover]:text-primary [&_a]:text-foreground'>
          <a href='https://amrita.town/prev' class='inline-flex items-center'>
            <span set:html={arrowLeftIcon} class='inline-block h-4 w-4' />
          </a>
          <a href='https://amrita.town/random' class='inline-flex items-center gap-1'>
            <span set:html={diceIcon} class='inline-block h-4 w-4' />
          </a>
          <a href='https://amrita.town/next' class='inline-flex items-center'>
            <span set:html={arrowRightIcon} class='inline-block h-4 w-4' />
          </a>
        </div>

        {/* Social Brands */}
        <div class='flex items-center gap-x-4'>
          {
            footerConf.social &&
              Object.entries(footerConf.social).map(([platform, { label, url }]) => (
                <a
                  class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
                  href={url}
                  aria-label={label}
                >
                  <Icon name={platform as keyof typeof footerConf.social} />
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
